<%= form_for @webpage_style, remote: true, html: { style: "display:inline;" } do |f| %>
  <div class="modal-body">
    <ul class="errors"></ul>
    <div class="form-group">
      <%= f.label :title, class: "control-label" %>
      <%= f.text_field :title, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :font_style, class: "control-label" %>
      <%= f.select(:font_style, options_for_select(WebpageStyle::FONT_STYLE), {}, {:class => 'form-control' }) %>
    </div>
    <div class="form-group">
      <%= f.label :bg_color, class: "control-label" %>
      <%= f.text_field :bg_color, class: "form-control" %>
    </div>
  </div>
  <div class="modal-footer">
    <%= f.submit class: "btn btn-primary" %>
    <%= link_to "Cancel", "#", class: "btn", data: {dismiss: "modal"} %>
  </div>
<% end %>

